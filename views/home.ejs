<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <title>Homepage</title>
    <style>
        .card:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease-in-out;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .blog-grid {
            gap: 1.5rem;
        }
    </style>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container mt-5">
        <h2 class="mb-4 text-center">Latest Blogs</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 blog-grid">
            <% blogs.forEach(blog => { %>
                <div class="col d-flex">
                    <div class="card flex-fill h-100">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog cover image">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" title="<%= blog.title %>"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary mt-auto">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>

</html>
